{
  "name": "@commercelayer/mcp-server-metrics",
  "version": "1.0.0",
  "description": "Commerce Layer Metrics MCP server",
  "type": "module",
  "main": "index.js",
  "author": "Pierluigi Viti <pierluigi@commercelayer.io>",
  "license": "MIT",
  "exports": {
    ".": "./index.js",
    "./tools": {
      "default": "./lib/metrics/tools/index.js",
      "types": "./lib/metrics/tools/index.d.ts"
    },
    "./resources": {
      "default": "./lib/metrics/resources/index.js",
      "types": "./lib/metrics/resources/index.d.ts"
    },
    "./prompts": {
      "default": "./lib/metrics/prompts/index.js",
      "types": "./lib/metrics/prompts/index.d.ts"
    },
    "./types": {
      "types": "./lib/server/types.d.ts"
    }
  },
  "scripts": {
    "build": "rm -rf lib && tsc",
    "lint": "eslint src --ext .ts --config .eslintrc",
    "test": "tsx --test \"./specs/**/*.spec.ts\"",
    "dist:clean": "rm -rf dist/server && rm -rf dist/node_modules",
    "dist:copy": "cp -r lib dist/server && find dist/server -name \"*.d.ts\" -type f -delete && cp -r src/metrics/resources/docs dist/server/metrics/resources && cp ./package*.json dist",
    "dist:manifest": "tsx gen/manifest.ts",
    "dist:exec": "chmod 755 dist/server/index.js",
    "dist:dep": "cd dist && npm install --omit=dev && cd ..",
    "dist:test": "tsx --test \"./specs/**/*.spec.dist.ts\"",
    "dist:mcpb": "mkdir -p mcpb && mcpb pack dist mcpb/commercelayer-metrics.mcpb",
    "dist": "pnpm dist:clean && pnpm dist:copy && pnpm dist:manifest && pnpm dist:exec && pnpm dist:dep && pnpm dist:test",
    "mcpb": "pnpm dist && pnpm dist:mcpb",
    "release": "pnpm build && pnpm lint && pnpm test && pnpm mcpb",
    "prepack": "pnpm build"
  },
  "keywords": [
    "ai",
    "mcp",
    "commercelayer"
  ],
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=22",
    "pnpm": "10.x"
  },
  "dependencies": {
    "@commercelayer/js-auth": "^6.7.2",
    "@commercelayer/sdk": "^6.50.0",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@anthropic-ai/mcpb": "^1.2.0",
    "@commercelayer/eslint-config-ts": "^2.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.10.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cpy-cli": "^6.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.1",
    "pnpm": "^10.21.0",
    "semantic-release": "^25.0.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}